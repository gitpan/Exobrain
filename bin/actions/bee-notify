#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

# PODNAME: bee-notify
# ABSTRACT: Send a notification every time a bmndr data point is updated

use Exobrain;

my $exobrain = Exobrain->new;

$exobrain->watch_loop(
    class => 'Measurement::Beeminder',
    then => sub {
        my $event = shift;
        $exobrain->notify($event->summary);
    },
);

__END__

=pod

=head1 NAME

bee-notify - Send a notification every time a bmndr data point is updated

=head1 VERSION

version 1.02

